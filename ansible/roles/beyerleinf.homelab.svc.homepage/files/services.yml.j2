- Storage:
    - Seafile:
        icon: "sh-seafile"
        href: https://files.lab.beyerleinf.de
        siteMonitor: https://files.lab.beyerleinf.de
        server: arya
        container: seafile

    - Paperless:
        icon: "sh-paperless-ngx"
        href: https://paperless.lab.beyerleinf.de
        siteMonitor: https://paperless.lab.beyerleinf.de
        server: arya
        container: seafile
        widget:
          type: paperlessngx
          url: https://paperless.lab.beyerleinf.de
          key: {{ paperless_api_key }}

    - Immich:
        icon: "sh-immich"
        href: https://pics.lab.beyerleinf.de
        siteMonitor: https://pics.lab.beyerleinf.de
        server: arya
        container: immich-server-1
        widget:
          type: immich
          url: https://pics.lab.beyerleinf.de
          key: {{ immich_api_key }}
          version: 2

- Media:
    - Jellyfin:
        icon: "sh-jellyfin"
        href: https://media.lab.beyerleinf.de
        siteMonitor: https://media.lab.beyerleinf.de/health
        server: arya
        container: jellyfin
        widget:
          type: jellyfin
          url: https://media.lab.beyerleinf.de
          key: {{ jellyfin_api_key }}
          enableBlocks: true
          enableNowPlaying: true
          enableUser: true
          showEpisodeNumber: true
          expandOneStreamToTwoRows: false
    
    - "Tube Archivist":
        icon: "sh-tube-archivist"
        href: "https://ta.lab.beyerleinf.de"
        siteMonitor: "https://ta.lab.beyerleinf.de"
        server: arya
        container: "tubearchivist"
        widget:
          type: "tubearchivist"
          url: "https://ta.lab.beyerleinf.de"
          key: {{ tube_archivist_api_key }}

- Tools:
    - Umami:
        icon: "sh-umami"
        href: https://umami.lab.beyerleinf.de
        siteMonitor: https://umami.lab.beyerleinf.de
        server: arya
        container: umami
    - Grafana:
        icon: "sh-grafana"
        href: "https://grafana.lab.beyerleinf.de"
        siteMonitor: "https://grafana.lab.beyerleinf.de"
        server: arya
        container: grafana
        widget:
            type: grafana
            url: "https://grafana.lab.beyerleinf.de"
            username: {{ grafana_username }}
            password: {{ grafana_password }}
    - "Home Assistant":
        icon: "sh-home-assistant"
        href: "https://hass.lab.beyerleinf.de"
        siteMonitor: "https://hass.lab.beyerleinf.de"
        server: arya
        container: homeassistant
        widget:
          type: homeassistant
          url: "https://hass.lab.beyerleinf.de"
          key: {{ homeassistant_token }}
          custom:
            - template: "{% raw %}{{ states.light|selectattr('state','equalto','on')|list|length }}{% endraw %}"
              label: lights on
            - template: "{% raw %}{{ states.switch|selectattr('state','equalto','on')|list|length }}{% endraw %}"
              label: switches on
            - state: "weather.home"
              label: "Weather"
              value: "{% raw %}{attributes.temperature} {attributes.temperature_unit} | {attributes.wind_speed} {attributes.wind_speed_unit}{% endraw %}"

