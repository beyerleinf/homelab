services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    networks:
      - reverseproxy
    ports:
      - 3003:3000
    volumes:
      - {{docker_dir}}:/app/config
      - /var/run/docker.sock:/var/run/docker.sock
volumes:
  homepage:

networks:
  reverseproxy:
    name: reverseproxy
    external: true